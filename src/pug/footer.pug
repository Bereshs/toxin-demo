-values=['О нас','Новости','Служба поддежки', 'Услуги']
mixin item (value)
        p.txt=value

mixin itemtd(value)
    td.leftspace20=value

mixin row (name,caption,values)
    span(class=name)
        h3=caption
        each value in values
            +item(value)

mixin tdrow (name, caption,values)
    table(class=name)
        tr
            td.left.leftspace20
                p.txt_700=caption
            each value in values
                +itemtd(value)

doctype html
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet" href="./src/css/Footers.css")
        link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
        link(rel="stylesheet" href="./src/css/Toxin.css")
    title="Toxin-footer"
    body
        .header1
            span.headerRect1.border
                table(width='90%' align='center')
                    tr
                        td.left.top
                            span.def
                                img(src="src/img/Logo.svg" alt="Logo" class="logo")
                        td.top.right
                            span.def
                                +tdrow("", "О нас", ['Услуги', 'Вакансии', 'Новости', 'Соглашения'])
                        td.left.center
                            span.def
                                table
                                    tr
                                        td.leftspace20
                                            span.button1
                                                p.gradient="ВОЙТИ"
                                        td.leftspace20
                                            span.button2
                                                p.color_white="ЗАРЕГИСТРИРОВАТЬСЯ"
        .footer1
            .Rectangle.border
                span.a
                    table(width='90%' align='center')
                        tr
                            td.left.top
                               span.group.flex
                                    span.def
                                        img(src="src/img/Logo.svg" alt="Logo" class="logo")
                                    p.color_darkShade75.lh-24="Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды"
                            td.left.top
                                +row("group1","Навигация",values)
                            td.left.top
                                +row("group2","О нас",['О сервисе','Наша команда','Вакансии','Инвесторы'])
                            td.left.top
                                +row("group3","Служба поддежки",['Соглашения','Сообщества','Вакансии','Связь с нами'])
                            td.left.top
                                span.group4.flex
                                    span
                                        h3="Подписка"
                                        p.lh-24="Получайте специальные предложения и новости сервиса"
                                    span.Rectangle2
                                        table(width='100%' height='100%')
                                            tr
                                                td(height='100%').left
                                                    span.txt_normal.color_darkShade25.vcenter="Email"
                                                td.right
                                                    span.material-icons.fs-24.vcenter.gradient="arrow_forward"
            .Rectangle3.border
                span.txt_c.left
                    a.txt_normal="Copyright © 2018 Toxin отель. Все права защищены."
                span.img_c
                    span.fontIcons.gradient.fs-24=""
                    span.fontIcons.gradient.fs-24.leftspace20=""
                    span.fontIcons.gradient.fs-24.leftspace20=""
        .footer2
            div.Rectangle4.border
                div.width
                    span.group5
                        span
                            img(src="src/img/Logo.svg" alt="Logo" class="logo center")
                        a.txt_normal.upspace20="Copyright © 2018 Toxin отель. Все права защищены."
                        span.upspace25
                            span.fontIcons.gradient.fs-24=""
                            span.fontIcons.gradient.fs-24.leftspace20=""
                            span.fontIcons.gradient.fs-24.leftspace20=""
